MainWindow::MainWindow(QWidget *parent)
    : QMainWindow(parent)
    , ui(new Ui::MainWindow)
{
    ui->setupUi(this);
    connect(ui->INSERT_CARD_BT,SIGNAL(clicked(bool)),
            this,SLOT(handleInserCardClick()));
    this->setStyleSheet("background-color: lightblue;");
}

MainWindow::~MainWindow()
{
    delete ui;
    ui=nullptr;
}

